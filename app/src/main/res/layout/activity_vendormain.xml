<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainVendorActivity">

    <!-- Vendor Greeting -->
    <LinearLayout
        android:id="@+id/vendor_greeting_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vendor_logo_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Vendor Logo"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/vendor_greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Vendor Name!"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Analytics Section -->
    <LinearLayout
        android:id="@+id/vendor_analytics_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/vendor_greeting_section">

        <TextView
            android:id="@+id/analytics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Total Sales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Sales Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/total_sales_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sales: $1200"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Total Orders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                android:contentDescription="Orders Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/total_orders_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Orders: 24"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- View More Button -->
        <Button
            android:id="@+id/view_analytics_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View More"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/maroon"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Quick Actions Section -->
    <LinearLayout
        android:id="@+id/vendor_quick_actions_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/vendor_analytics_section">

        <TextView
            android:id="@+id/quick_actions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/add_item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add New Item" />

            <Button
                android:id="@+id/delete_item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="Delete Item" />

            <Button
                android:id="@+id/view_orders_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="View Orders" />
        </LinearLayout>
    </LinearLayout>

    <!-- Vendor Requests Title -->
    <TextView
        android:id="@+id/vendor_requests_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Commission Requests"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/vendor_quick_actions_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Vendor Requests RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vendor_requests_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/vendor_requests_title"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/maroon"
        android:padding="8dp"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/nav_messages_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_message"
            android:contentDescription="Messages" />

        <ImageView
            android:id="@+id/nav_profile_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
