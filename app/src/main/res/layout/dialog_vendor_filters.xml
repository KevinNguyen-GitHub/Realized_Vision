<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Vendor Filters"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_woodworking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Woodworking"
        app:layout_constraintTop_toBottomOf="@id/filterTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_welding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welding"
        app:layout_constraintTop_toBottomOf="@id/checkbox_woodworking"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_programming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        app:layout_constraintTop_toBottomOf="@id/checkbox_welding"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_flooring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flooring"
        app:layout_constraintTop_toBottomOf="@id/checkbox_programming"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        app:layout_constraintTop_toBottomOf="@id/checkbox_flooring"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_mechanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mechanic"
        app:layout_constraintTop_toBottomOf="@id/checkbox_artist"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video and Automation"
        app:layout_constraintTop_toBottomOf="@id/checkbox_mechanic"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphic Design"
        app:layout_constraintTop_toBottomOf="@id/checkbox_video"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_filters_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
