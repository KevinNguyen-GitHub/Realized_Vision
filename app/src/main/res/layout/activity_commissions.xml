<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige"
    android:padding="16dp">

    <!-- Commission Request Button at the Top -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/RequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commission Request"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/maroon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Title for User Requests -->
    <TextView
        android:id="@+id/userRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Commission Requests"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- RecyclerView for User Requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Title for Vendor Requests -->
    <TextView
        android:id="@+id/vendorRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor Commission Requests"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- RecyclerView for Vendor Requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vendorRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
