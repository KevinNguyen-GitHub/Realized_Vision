<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
    <!-- Background color of the entire dialog -->
    <item name="android:windowBackground">@color/white</item>

    <!-- Title bar (header) color -->
    <item name="colorPrimary">@color/maroon</item> <!-- Change this to your desired color -->

    <!-- Clock face color -->
    <item name="colorSurface">@color/white</item> <!-- Background of clock -->

    <!-- Clock hand color -->
    <item name="colorAccent">@color/maroon</item> <!-- Changes clock hand color -->
        <item name="android:textColor">@color/black</item>

</style>
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">

        <item name="android:windowBackground">@color/maroon</item>

        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorPrimary">@color/black</item>

        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
    </style>

    <!-- Custom Button Style -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>